<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_barunuat"
    tools:context=".admin.SignUpAdminActivity">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="57dp"
        android:layout_height="66dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/tv_masuk2admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#E91E63"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.293" />

    <Button
        android:id="@+id/bt_daftar3admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/daftar4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.735"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.287" />

    <Button
        android:id="@+id/bt_masuk1admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/daftar3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.737"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_namaadmin"
        android:layout_width="233dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Masukan Nama Admin"
        android:inputType="textPersonName"
        android:textColor="#131313"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_daftar3admin" />

    <EditText
        android:id="@+id/et_usernameadmin"
        android:layout_width="233dp"
        android:layout_height="42dp"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Masukan Email Admin"
        android:inputType="textEmailAddress"
        android:textColor="#131313"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_namaadmin" />

    <EditText
        android:id="@+id/et_Passwordadmin"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Masukan Password"
        android:inputType="textPassword"
        android:textColor="#1C1C1C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_usernameadmin" />

    <EditText
        android:id="@+id/et_Password2admin"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:ems="10"
        android:fontFamily="@font/aclonica"
        android:hint="Masukan Password"
        android:inputType="textPassword"
        android:textColor="#1C1C1C"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_masuk1admin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Passwordadmin"
        app:layout_constraintVertical_bias="0.0" />

    <cyd.awesome.material.AwesomeText
        android:id="@+id/ImgShowPassword"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:awesome_font="material_design"
        app:awesome_icon="MD_VISIBILITY_OFF"
        app:layout_constraintBottom_toBottomOf="@id/et_Passwordadmin"
        app:layout_constraintEnd_toEndOf="@id/et_Passwordadmin"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_usernameadmin"
        app:layout_constraintVertical_bias="0.769" />

    <cyd.awesome.material.AwesomeText
        android:id="@+id/ImgShowPassword2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="20dp"
        app:awesome_font="material_design"
        app:awesome_icon="MD_VISIBILITY_OFF"
        app:layout_constraintBottom_toBottomOf="@id/et_Password2admin"
        app:layout_constraintEnd_toEndOf="@id/et_Password2admin"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Passwordadmin"
        app:layout_constraintVertical_bias="0.769" />


</androidx.constraintlayout.widget.ConstraintLayout>