<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="INFORMASI DOKTER"
                android:textColor="#0C0C0C"
                android:textSize="25dp"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Nama Dokter "
                android:textColor="#0C0C0C"/>
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#0C0C0C"/>
            <TextView
                android:id="@+id/edit_namaDok"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#0C0C0C"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Senin - Kamis"
                android:textColor="#0C0C0C"/>
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#0C0C0C"/>
            <TextView
                android:id="@+id/edit_hariPel"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#0C0C0C"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Jum'at"
                android:textColor="#0C0C0C"/>
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#0C0C0C"/>
            <TextView
                android:id="@+id/edit_hariPeljumat"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#0C0C0C"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Sabtu"
                android:textColor="#0C0C0C"/>
            <TextView
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#0C0C0C"/>
            <TextView
                android:id="@+id/edit_hariPelSabtu"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="#0C0C0C"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>